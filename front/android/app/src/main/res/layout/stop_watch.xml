<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_idog_widget"
    android:orientation="horizontal"
    android:padding="16dp"
    android:visibility="visible">

    <ImageView
        android:id="@+id/profile"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/a209icon"
        android:adjustViewBounds="true"
        android:scaleType="centerInside" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/playButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:minHeight="48dp"
                android:src="@drawable/possible_play"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="centerInside" />

            <ImageView
                android:id="@+id/stopButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:minHeight="48dp"
                android:src="@drawable/possible_stop"
                android:visibility="gone"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="centerInside" />

            <ImageView
                android:id="@+id/resetButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:minHeight="48dp"
                android:src="@drawable/impossible_reset"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="centerInside" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/timerBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/background_timer"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0:00:00"
                android:textColor="@android:color/white"
                android:textSize="28sp"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
